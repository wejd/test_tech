    <style type="text/css">
        body { background: url(img/bg-register.png) no-repeat center center fixed;
            /*-webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;*/
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;

        }
        .isa_info {
            color: #00529B;
            background-color: #BDE5F8;
            height: 3%;
            border: 1px solid;

        }
        .alert {
            padding: 20px;
            background-color: #003399;
            color: white;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .closebtn:hover {
            color: black;
        }
    </style>

</head>

<body>
<div class="container-fluid-full">
    <div class="row-fluid" style="opacity: 0.9" id="registrationForm">

        <div class="row-fluid" >
            <div class="login-box"  >

                </br>
                <h2> <b style="color: #002a80">Skideev User Registration </b></h2>



                <h2> <% if(message) { %> <%=message%> <% } %></h2>
                <form id="register"  class="form-horizontal" action="/register" method="post">
                    <fieldset>

                        <div class="input-prepend" title="Username">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            <input class="input-large span10" name="name" id="name" type="text" placeholder="Name" required/>
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="email">
                            <span class="add-on"><i class="halflings-icon envelope"></i></span>
                            <input class="input-large span10" name="email" id="email" type="email" placeholder="Email" required/>
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            <input class="input-large span10" name="password" id="password" type="password" placeholder="Password"  minlength="8" required />
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            <input class="input-large span10" name="passwordCheck" id="passwordCheck" type="password" placeholder="Re-type your Password"  required/>
                            <h3 id="divCheckPasswordMatch"></h3>
                        </div>
                        <div class="clearfix" ></div>
                        <div class="input-prepend" title="phone number">
                            <span class="add-on"><i class="halflings-icon phone"></i></span>
                            <input class="input-large span10" name="phone_number" id="phone" type="tel" placeholder="Phone number" />
                        </div>

                        <div class="clearfix"></div>


                        <div class="button-login">
                            <button type="submit" class="btn btn-primary" >Register</button>
                        </div>
                        <div class="clearfix"></div>
                    </fieldset>
                </form>



            </div><!--/span-->
        </div><!--/row-->


    </div><!--/.fluid-container-->

</div><!--/fluid-row-->


<script type="text/javascript">


    $(document).ready(function () {


        $('#register').validate({

            rules:{
                passwordCheck :{
                    equalTo: "#password"
                }
            },
            messages:{
                name:' please enter your name',
               password:{
                   required:'please provide a password',
                   minlength:' Your password must be at least 8 characters long'
               },
                passwordCheck: {
                    required:'please re-enter your password',
                    minlenght:' your password must be at least 8 characters long',
                    equalTo:' please enter the same password as above'

                }

            }

        });


    });

</script>

</body>

