<% layout('templates/layout') %>

<script type="text/javascript" src="angular_app/app_advanced_settings.js"></script>
<br>
<h1>Advanced Settings </h1>
<br>

<div ng-app="angularTable" ng-controller="APPControllerAdvancedSettings">


<div class="row-fluid " >
	<div class="box span12">
		<div class="box-header" data-original-title="">
			<h2><i class="halflings-icon white lock"></i><span class="break"></span>Change Password</h2>
			<div class="box-icon">

			</div>
		</div>
		<div class="box-content">
			<form class="form-horizontal"  >
				<fieldset>

					<div class="control-group success">
						<label class="control-label" for="inputSuccess">Old Password</label>
						<div class="controls">
							<input type="password" ng-model="old_password" id="inputSuccess">
							<span class="help-inline"></span>
						</div>
					</div>

					<div class="control-group success">
						<label class="control-label" for="inputSuccess">New Password</label>
						<div class="controls">
							<input type="password" ng-model="new_password" id="inputSuccess">
							<span class="help-inline"></span>
						</div>
					</div>
					<div class="control-group success">
						<label class="control-label" for="inputSuccess">Confirm New Password</label>
						<div class="controls">
							<input type="password" ng-model="confirm_new_password" id="inputSuccess">
							<span class="help-inline"></span>
						</div>
					</div>



					<div class="form-actions">
						<button type="button" class="btn btn-primary" ng-click="changePassword(old_password,new_password,confirm_new_password)">Submit</button>
						<button class="btn">Reset</button>
					</div>
				</fieldset>
			</form>
		</div>
	</div>

</div>


	<div>
		<form id="formUpdate" style="visibility: hidden" class="form-inline">
			<fieldset>
				<div class="control-group">
					<label class="control-label alert-danger" for="focusedInput">username</label>

					<div class="controls">
						<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…"
							   ng-model="user.username">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label alert-danger" for="focusedInput">password</label>

					<div class="controls">
						<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…"
							   ng-model="user.password">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label alert-danger" for="focusedInput">email</label>

					<div class="controls">
						<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…"
							   ng-model="user.email">
					</div>
				</div>


				<input type="button" value="valider" ng-click="ajouter(user)" class="btn btn-primary"/>
			</fieldset>
		</form>

	</div>

	<!-- START Password does not match POP UP   (HIDDEN)-->

	<div class="modal hide fade" id="Password_not_match_PopUp">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Password does not match</h3>
		</div>
		<div class="modal-body">
			<p>Please confirm your new password</p>
		</div>
		<div class="modal-footer">
			<a data-dismiss="modal" class="btn btn-primary">Close</a>
		</div>
	</div>

	<!-- END Password does not match POP UP -->

	<!-- START Password changed POP UP   (HIDDEN)-->

	<div class="modal hide fade" id="Password_changed_PopUp">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Password changed</h3>
		</div>
		<div class="modal-body">
			<p>Your password has been changed successfully</p>
		</div>
		<div class="modal-footer">
			<a data-dismiss="modal" class="btn btn-primary">Close</a>
		</div>
	</div>

	<!-- END Password changed POP UP -->

	<!-- START Password changed POP UP   (HIDDEN)-->

	<div class="modal hide fade" id="Password_not_changed_PopUp">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Wrong password</h3>
		</div>
		<div class="modal-body">
			<p>Your password does not changed</p>
		</div>
		<div class="modal-footer">
			<a data-dismiss="modal" class="btn btn-primary">Close</a>
		</div>
	</div>

	<!-- END Password changed POP UP -->


</div>