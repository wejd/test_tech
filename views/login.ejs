<body>
<div class="container-fluid-full">
    <div class="row-fluid">

        <div class="row-fluid">
            <div class="login-box">

                </br>
                <h2> <b>Skideev Administrator Login </b></h2>

                <form class="form-horizontal" action="/login" method="post">
                    <fieldset>

                        <div class="input-prepend" title="Username">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            <input class="input-large span10" name="admin_name" id="email" type="text" placeholder="Login"/>
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            <input class="input-large span10" name="admin_password" id="password" type="password" placeholder="Password"/>
                        </div>
                        <div class="clearfix"></div>



                        <div class="button-login">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <div class="clearfix"></div>
                        </fieldset>
                </form>

                <img src="/images/skideev_logo.png" width="180" height="70"  alt="Skideev Brand"  style="margin: 0px 20px 20px 20px"/>

            </div><!--/span-->
        </div><!--/row-->


    </div><!--/.fluid-container-->

