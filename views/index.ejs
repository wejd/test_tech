
<% layout('templates/layout')%>
<script  type="text/javascript" src="javascripts/angular.min.js" ></script>

<div ng-app="myApp" ng-controller="APPController">


        <div class="box span12">
            <div class="box-header" data-original-title="">
                <h2><i class="halflings-icon white user"></i><span class="break"></span>Members</h2>
                <div class="box-icon">
                    <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                    <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                    <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div id="" class="dataTables" role="">

                    <table class="table table-striped table-bordered" id="" >

                        <thead>
                        <td >

                            <a class="btn btn-toolbar" href="/add" >
                                add new user
                            </a>
                        </td>
                        <tr role="row">
                            <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username: activate to sort column descending" style="width: 252px;">username</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="" rowspan="1" colspan="1" aria-label="Role: activate to sort column ascending" style="width: 204px;">password</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 217px;">email</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" style="width: 424px;">Actions</th>
                        </tr>
                        </thead>

                        <tbody role="" aria-live="polite" aria-relevant="all"  ng-repeat="person in result" contenteditable="false">

                        <tr >

                            <td >{{person.username}}</td>
                            <td >{{person.password}}</td>
                            <td >{{person.email}}</td>

                            <td >

                                <a class="btn btn-danger"  ng-click=delete(person) >
                                    <i class="halflings-icon white trash"></i>
                                </a>

                                <a class="btn btn-info"  ng-click=update(person) >
                                    <i class="halflings-icon white edit"></i>
                                </a>
                            </td>

                        </tr>


                        </tbody>
                    </table>
            </div>
        </div>

</div>

    <div >
    <form id="formUpdate" style="visibility: hidden" class="form-inline">
        <fieldset>
        <div class="control-group">
            <label class="control-label alert-danger" for="focusedInput">username</label>
            <div class="controls">
                <input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…" ng-model="user.username">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label alert-danger" for="focusedInput">password</label>
            <div class="controls">
                <input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…" ng-model="user.password">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label alert-danger" for="focusedInput">email</label>
            <div class="controls">
                <input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…" ng-model="user.email">
            </div>
        </div>


        <input type="button" value="valider" ng-click="ajouter(user)" class="btn btn-primary"  />
        </fieldset>
    </form>

</div>
